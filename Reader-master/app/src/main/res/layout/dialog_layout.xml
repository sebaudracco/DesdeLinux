<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="650dp"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Id "
                android:singleLine="true"
                tools:layout_height="50dp" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameEditTxt2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre y Apellido"
                android:singleLine="true" />

            <TextView
                android:id="@+id/nameTxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameEditTxt3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Domicilio"
                android:singleLine="true" />

            <TextView
                android:id="@+id/nameTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameEditTxt4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Número de Medidor"
                android:singleLine="true" />

            <TextView
                android:id="@+id/nameTxt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameEditTxt5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Última Lectura"
                android:singleLine="true" />

            <TextView
                android:id="@+id/nameTxt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout6"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <Button
                    android:id="@+id/btnCargarImg"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorAccent"
                    android:onClick="onclick"
                    android:text="Seleccionar Imagen"
                    android:textColor="#ffff" />

                <ImageView
                    android:id="@+id/imagemId"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_below="@+id/textView"
                    android:layout_alignEnd="@+id/textView"
                    android:layout_alignRight="@+id/textView"
                     />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btnCargarImg"
                    android:layout_centerHorizontal="true"

                    android:layout_marginLeft="46dp"
                    android:layout_marginBottom="10dp"
                    android:text="GESTIONAR IMAGEN"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="#228B22"
            android:clickable="true"
            android:text="Guardar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/retrieveBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#228B22"
            android:clickable="true"
            android:text="Actualizar"
            android:textColor="@android:color/white" />


    </LinearLayout>

</android.support.v7.widget.CardView>